---
import { posts } from '../data/posts';
import { ArrowRight } from '@lucide/astro';
---

<section class="w-full max-w-[720px] mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-xl font-sans font-semibold text-white">Recent Posts</h2>
    <a href="/blog" class="text-sm font-sans text-neutral-400 hover:text-white transition-colors flex items-center gap-1 group">
      View all <ArrowRight class="w-3.5 h-3.5 group-hover:translate-x-0.5 transition-transform" />
    </a>
  </div>

  <div class="flex flex-col gap-10">
    {posts.map((post) => (
      <a href={`/blog/${post.slug}`} class="group flex flex-col gap-2">
        <div class="flex items-center justify-between">
          <h3 class="text-xl md:text-2xl font-serif italic text-white group-hover:text-neutral-300 transition-colors leading-tight">
            {post.title}
          </h3>
          <span class="text-xs md:text-sm font-sans text-neutral-500 whitespace-nowrap ml-4">
            {post.date}
          </span>
        </div>
        <p class="text-sm md:text-base font-sans text-neutral-400 max-w-[600px] leading-relaxed line-clamp-2">
          {post.description}
        </p>
      </a>
    ))}
  </div>
</section>
