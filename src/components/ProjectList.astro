---
import { projects } from '../data/projects';
import { ArrowUpRight } from '@lucide/astro';
---

<section class="w-full max-w-[720px] mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-xl font-sans font-semibold text-white">Work</h2>
    <a href="/work" class="text-sm font-sans text-neutral-400 hover:text-white transition-colors flex items-center gap-1 group">
      See more <ArrowUpRight class="w-3.5 h-3.5 group-hover:-translate-y-0.5 group-hover:translate-x-0.5 transition-transform" />
    </a>
  </div>

  <div class="flex flex-col gap-16">
    {projects.map((project) => (
      <a href={project.link} class="group grid grid-cols-1 md:grid-cols-[240px_1fr] gap-8 items-center">
        <div class="relative aspect-video overflow-hidden rounded-lg bg-neutral-900 border border-white/5">
          <img 
            src={project.image} 
            alt={project.name}
            class="object-cover w-full h-full grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-500"
          />
        </div>
        
        <div class="flex flex-col gap-2">
          <div class="flex items-center justify-between">
            <h3 class="text-xl md:text-2xl font-serif italic text-white group-hover:text-neutral-300 transition-colors leading-tight">
              {project.name}
            </h3>
            <span class="text-xs md:text-sm font-sans text-neutral-500 whitespace-nowrap ml-4">
              {project.year}
            </span>
          </div>
          <p class="text-sm md:text-base font-sans text-neutral-400 leading-relaxed">
            {project.description}
          </p>
          <div class="flex gap-3 mt-1">
            {project.tech.map((t) => (
                <span class="text-[10px] uppercase tracking-widest font-sans font-medium text-neutral-500 px-2 py-0.5 rounded-full bg-neutral-900 border border-white/5">
                {t}
              </span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
