---
import { ArrowUpRight, ArrowUp } from '@lucide/astro';
const currentYear = new Date().getFullYear();
---

<footer class="w-full max-w-[720px] mx-auto px-4 pt-10 pb-20 border-t border-white/5">
    <!-- CTA Section -->
    <div class="mb-16">
        <h1 class="text-3xl md:text-4xl font-light font-sans text-white tracking-tight">
            Let's build something
        </h1>
        <p class="text-4xl md:text-5xl font-serif italic text-neutral-400">
            meaningful together
        </p>
    </div>

    <!-- Bottom Credits -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-[10px] uppercase tracking-[0.2em] font-sans text-neutral-600">
        <p>&copy; {currentYear} Sergio â€” All rights reserved</p>
        <button 
            onclick="window.scrollTo({top: 0, behavior: 'smooth'})" 
            class="group flex items-center gap-2 hover:text-white transition-colors cursor-pointer"
        >
            Back to Top
            <ArrowUp class="w-3 h-3 group-hover:-translate-y-0.5 transition-transform" />
        </button>
    </div>
</footer>
